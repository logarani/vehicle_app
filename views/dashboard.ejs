<%- include('header') -%>
<%- include('banner') -%>

<div class="text-center">
    <div id="title"><h3> Dealers Dashboard </h3></div>

    <div id="container" class="container py-5" id="dealers">
        <table id="dealersTable" class="table table-striped table-hover table-bordered table-sm" cellspacing="0" width="100%">
          <tr>
            <th class="th-sm header">BAC</th>
            <th class="th-sm header">Name</th>
            <th class="th-sm header">City</th>
            <th class="th-sm header">State</th>
            <th class="th-sm header">Country</th>
            <th class="th-sm header">Brand</th>
          </tr>
        <% for (var i = 0; i < data.length; i++) { %>
            <tr>
            <td class="td-sm"> <button class="tablebtn" onclick="populateVehicleDetails( <%= data[i].bac %> )"><%= data[i].bac %></button></td>
            <td class="td-sm"> <button class="tablebtn" onclick="populateVehicleDetails( <%= data[i].bac %> )"><%= data[i].name %></button></td>
            <td class="td-sm"> <button class="tablebtn" onclick="populateVehicleDetails( <%= data[i].bac %> )"><%= data[i].city %></button></td>
            <td class="td-sm"> <button class="tablebtn" onclick="populateVehicleDetails( <%= data[i].bac %> )"><%= data[i].state %></button></td>
            <td class="td-sm"> <button class="tablebtn" onclick="populateVehicleDetails( <%= data[i].bac %> )"><%= data[i].country %></button></td>
            <td class="td-sm"> <button class="tablebtn" onclick="populateVehicleDetails( <%= data[i].bac %> )"><%= data[i].brand %></button></td>
            </tr>
          <% } %>
         </table>
    </div>
</div>

<%- include('footer') -%>