 <script>
      function populateVehicleDetails(bac) {
        const vehicle_url = "https://bb61co4l22.execute-api.us-west-2.amazonaws.com/development/vehicles/" + bac
        const containerDisplay = document.querySelector('#container')
        var result ;
        fetch(vehicle_url)
            .then(res => {
             if(res.status === 500){
                 document.getElementById('title').innerHTML = "";
                 document.getElementById('container').innerHTML = "<h3> There is an error. Please try again later.</h3>";
